---
import { url } from '../config'

interface Props {
  posts: { slug: string; title: string }[]
  title?: string
}

const { posts, title = 'RELATED POSTS' } = Astro.props
---
{posts.length > 0 && (
  <div class="related-posts">
    <h3 class="related-posts-title">{title}</h3>
    <ul class="related-posts-list">
      {posts.map(post => (
        <li>
          <a href={url(`/${post.slug}`)} class="action-list-item">
            <figure class="action-list-icon">></figure>
            <span class="action-list-text">{post.title}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>
)}

<style>
  .related-posts-title {
    font-size: var(--font-size);
    font-weight: 400;
    margin-bottom: calc(var(--font-size) * var(--theme-line-height-base) * 0.5);
  }

  .related-posts-list {
    list-style: none;
    padding: 0;
  }
</style>
